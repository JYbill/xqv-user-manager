datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username    String   @unique // 查询直接根据casbin查，不用逻辑外键查，加唯一即可
  nickname    String // 昵称
  password    String
  salt        String // 信息摘要加密盐
  gmtCreate   DateTime @default(now()) @map("gmt_create")
  gmtModified DateTime @default(now()) @updatedAt @map("gmt_modified")
  isAdmin     Boolean  @default(false) // 是否是管理员，作用于casbin的超级管理员权限
  webToken    String?  @map("web_token")
  /// 刷新token一般过期时间远大于登陆token，一般设置一周
  freshToken  String?  @map("fresh_token")

  @@map("users")
}

// Casbin必备
model CasbinRule {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  ptype String
  v0    String?
  v1    String?
  v2    String?
  v3    String?
  v4    String?
  v5    String?

  @@map("casbin_rule")
}
